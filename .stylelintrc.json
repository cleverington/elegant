{
  "extends": "stylelint-config-standard",
  "rules": {
    "number-leading-zero": "never",
    "at-rule-no-unknown": null,
    "at-rule-empty-line-before": "never",
    "declaration-no-important": true,
    "max-nesting-depth": 4,
    "selector-max-id": 1,
    "string-quotes": "single",
    "indentation": "tab"
  }
}
